      "post": {
        "summary": "Creates an asset for a study procedure",
        "security": [
          {
            "userSessionKey": []
          },
          {
            "chillipharmSession": []
          }
        ],
        "operationId": "postStudyProcedureAsset",
        "description": "Creates an asset for a study procedure",
        "requestBody": {
          "description": "Asset creation parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "filename": {
                    "type": "string",
                    "description": "The asset filename",
                    "example": "sample-vid.mp4"
                  },
                  "filesize": {
                    "type": "integer",
                    "description": "The asset filesize",
                    "example": 37512140
                  },
                  "mime_type": {
                    "type": "string",
                    "description": "The asset mime type",
                    "example": "video/mp4"
                  },
                  "s3_name": {
                    "type": "string",
                    "description": "The asset s3 name",
                    "example": "2/5f42f51e-ad11-4b8d-8e16-5f0bd3f081a4/d2a942f1-29f5-4320-8e6e-e92508b3b372.mp4"
                  },
                  "authenticity_token": {
                    "type": "string",
                    "description": "The asset authenticity token",
                    "example": "VjSSYLd24JWR7jTOKu8V61nODVwo1ZGCkx9UZKp5MC2J8+3e+gjg3p14CRIjKuNQ0Vn96GcS1oe4ne+aMnGuHw=="
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "description": "The account id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            }
          },
          {
            "name": "site_id",
            "in": "path",
            "description": "The site id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            }
          },
          {
            "name": "subject_id",
            "in": "path",
            "description": "The subject id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "SUBJECT_ID"
            }
          },
          {
            "name": "study_event_id",
            "in": "path",
            "description": "The study event id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "STUDY_EVENT_ID"
            }
          },
          {
            "name": "study_procedure_id",
            "in": "path",
            "description": "The study procedure id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "STUDY_PROCEDURE_ID"
            }
          }
        ],
        "tags": [
          "Study Procedures"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "asset": {
                      "$ref": "#/components/schemas/Asset"
                    },
                    "updates": {
                      "$ref": "#/components/schemas/AssetUpdates"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "asset",
                    "updates"
                  ]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
